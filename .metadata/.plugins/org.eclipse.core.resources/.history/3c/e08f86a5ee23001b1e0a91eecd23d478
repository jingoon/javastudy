package com.naver;

import java.util.Scanner;

public class Hero {
	Weapon[] weapons;
	Weapon w;
	public Hero(Weapon[] weapons, Weapon w) {
		super();
		this.weapons = weapons;
		this.w = w;
	}
	public Weapon[] getWeapons() {
		return weapons;
	}
	public void setWeapons(Weapon[] weapons) {
		this.weapons = weapons;
	}
	public Weapon getW() {
		return w;
	}
	public void setW(Weapon w) {
		this.w = w;
	}
	
	public void attack(monster mon) {
		w.attack(mon);
	}
	public void scanIdx() {
		Scanner sc = new Scanner(System.in);
		int idx=sc.nextInt();
		sc.nextLine();
		ChageWeapon(idx);
		sc.close();
	}
	public void ChageWeapon(int idx) {
		try {
			w=weapons[idx];
		} catch (Exception e) {
		//	System.out.println("무기변경이 취소되었습니다.");
		//	return;
			System.out.println("무기를 다시 선택해");
			scanIdx();
		}
		
		System.out.println(w+"로 무기변경됨");
		
	}
	
}
