package com.naver;

public class Hero {
	Weapon[] weapons;
	Weapon w;
	public Hero(Weapon[] weapons, Weapon w) {
		super();
		this.weapons = weapons;
		this.w = w;
	}
	public Hero() {
		// TODO Auto-generated constructor stub
	}
	public void attack(Monster	mon) {
		w.attack(mon);
	}
	public void chagWeapon(int weaponChagIdx) {
		if(weaponChagIdx<0 || weaponChagIdx>=weapons.length) {
			w = weapons[weaponChagIdx-1];
		}
		w= weapons[weaponChagIdx];
		System.out.println(w+"로 무기를 변경");
		
	}
	
	
}
