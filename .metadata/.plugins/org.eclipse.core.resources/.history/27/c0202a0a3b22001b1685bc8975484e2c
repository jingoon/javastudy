package kr.co.test2;

import java.util.Scanner;

import com.naver.Bow;
import com.naver.Gun;
import com.naver.Hero;
import com.naver.Monster;
import com.naver.Sword;
import com.naver.Weapon;

public class Test2 {
	public static void main(String[] args) {
	
		Scanner sc = new Scanner(System.in);
		Monster mon = new Monster(99);
		Weapon[] weapons = {new Bow("bow", 10), new Sword("sword", 11), new Gun("gun", 12)};
		Weapon w = weapons[0];
		Hero h1 = new Hero(weapons, w);
		
		boolean isTrue = true;
		int menu = 0;
		int weaponIndex =0;
		while(isTrue) {
			System.out.println("메뉴를 선택하세요.");
			System.out.println("[1:공격] [2:무기변경] [0:종료]");
			menu = sc.nextInt();
			switch (menu) {
			case 0:
				break;
			case 1:
				h1.attack(mon);
			case 2:
				System.out.println("무기를 선택하세요");
				for(int i=0;i<weapons.length;i++) {
					System.out.println(String.format("[%d: %s] ", i, weapons[i]));
				}
				weaponIndex = sc.nextInt();
				h1.chageWeapon(weaponIndex);
			default:
				System.out.println("잘못누름");
			
			}
		}
		
		
		sc.close();
		System.out.println("end");
	
	}
	
}
